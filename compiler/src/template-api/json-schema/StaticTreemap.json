{
    "type": "object",
    "properties": {
        "db": {
            "type": "string",
            "minLength": 1
        },
        "query": {
            "type": "object",
            "properties": {
                "table": {
                    "type": "string",
                    "minLength": 1
                },
                "dimensions": {
                    "type": "array",
                    "item": {
                        "type": "string",
                        "minLength": 1
                    },
                    "minItems": 1
                },
                "measure": {
                    "type": "string",
                    "pattern": "^(AVG|SUM|COUNT|MAX|MIN)\\(.+\\)$"
                },
                "sampleFields": {
                    "type": "array",
                    "item": {
                        "type": "string",
                        "minLength": 1
                    },
                    "default": []
                }
            },
            "required": ["table", "dimensions", "measure"],
            "additionalProperties": false
        },
        "tooltip": {
            "type": "object",
            "properties": {
                "columns": {
                    "type": "array",
                    "minItems": 1,
                    "item": {
                        "type": "string",
                        "minLength": 1
                    }
                },
                "aliases": {
                    "type": "array",
                    "minItems": 1,
                    "item": {
                        "type": "string",
                        "minLength": 1
                    }
                }
            },
            "required": ["columns", "aliases"],
            "additionalProperties": false
        },
        "padding": {
            "type": "integer",
            "minimum": 0,
            "maximum": 15,
            "default": 3
        },
        "textField": {
            "type": "string",
            "default": ""
        },
        "colorScheme": {
            "enum": [
                "interpolateBlues",
                "interpolateBrBG",
                "interpolateBuGn",
                "interpolateBuPu",
                "interpolateGnBu",
                "interpolateGreens",
                "interpolateGreys",
                "interpolateOrRd",
                "interpolateOranges",
                "interpolatePRGn",
                "interpolatePiYG",
                "interpolatePuBu",
                "interpolatePuBuGn",
                "interpolatePuOr",
                "interpolatePuRd",
                "interpolatePurples",
                "interpolateRdBu",
                "interpolateRdGy",
                "interpolateRdPu",
                "interpolateRdYlBu",
                "interpolateRdYlGn",
                "interpolateReds",
                "interpolateSpectral",
                "interpolateYlGn",
                "interpolateYlGnBu",
                "interpolateYlOrBr",
                "interpolateYlOrRd"
            ],
            "default": "interpolateGnBu"
        },
        "transition": {
            "type": "boolean",
            "default": true
        },
        "legend": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string",
                    "maxLength": 80,
                    "default": ""
                }
            },
            "additionalProperties": false
        },
        "width": {
            "type": "number",
            "minimum": 600,
            "maximum": 1500,
            "default": 1000
        },
        "height": {
            "type": "number",
            "minimum": 600,
            "maximum": 1500,
            "default": 1000
        }
    },
    "required": ["db", "query"],
    "additionalProperties": false
}
